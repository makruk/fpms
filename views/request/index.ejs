<div class="container">
	<div class="panel">
		<div class="panel-header">
			リクエスト検索
		</div>
		<div class="panel-content">
			<form action="/request">
				<fieldset>
					<div class="clearfix">
						<label>状態</label>
						<div class="input-control radio inline-block" data-role="input-control">
							<label class="inline-block">
								<input type="radio" name="r1" value="0"  />
								<span class="check"></span>
									フィードバック無し
							</label>
							<label class="inline-block">
								<input type="radio" name="r1" value="1" />
								<span class="check"></span>
									フィードバック有り
							</label>
						</div>
					</div>
					<div class="input-control checkbox" data-role="input-control">
						<label class="inline-block">
							<input type="checkbox" name="grade" value="1" />
							<span class="check"></span>
								accept
						</label>
						<label class="inline-block">
							<input type="checkbox" name="grade" value="2" />
							<span class="check"></span>
								reject
						</label>
						<label class="inline-block">
							<input type="checkbox" name="grade" value="3" />
							<span class="check"></span>
								pending
						</label>
					</div>
					<div>
						<input type="submit" value="リクエスト検索" class="large info">
					</div>
				</fieldset>
			</form>
		</div>
	</div>
	<table class="table striped bordered hovered">
		<thead>
			<tr>
				<th class="text-left">名前</th>
				<th class="text-left">日付</th>
				<th class="text-left">内容</th>
				<th class="text-left">フィードバック</th>
				<th class="text-left">状態</th>
				<th class="text-left">いいね</th>
				<th class="text-left">その他</th>
			</tr>
		</thead>
		<% for(var i = 0; i < requests.length; i++){%>
			<tbody>
				<tr class="">
					<td>島村卯月</td>
					<td><%= requests[i].createdAt %></td>
					<td><%= requests[i].request %></td>
					<td><% if(requests[i].responce != undefined){%>
							<%= requests[i].responce %>
							<%}%></td>
					<td><%if (requests[i].review == 1){ %>
								accept
							<%}%>
							<%if (requests[i].review == 2){ %>
								reject
							<%}%>
							<%if (requests[i].review == 3){ %>
								pending
							<%}%>
							<%if (requests[i].review == 0){ %>
								未評価
							<%}%>
					</td>
					<td>3</td>
					<td><a href="request1.html"><button class="button ">詳細</button></a><a href="list.html"><button class="button danger">削除</button></td>
				</tr>	
			</tbody>
		<%}%>
	</table>
</div>