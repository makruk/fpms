<div class="container">
  <h1>Edit Info</h1>
  <form action="/user/<%= user.user_id %>/edit" method="post" id="edit" onsubmit="return confirm();">
    <fieldset>
      <label>名前</label><div class="input-control text"><input name="name" type="text" value=<%= user.name %> class="size6 validate[required]"></div>
      <label>ユーザーID</label><div class="input-control text"><input name="user_id" type="text" value=<%= user.user_id %> class="size6 validate[required]"></div>
      <label>学年</label>
       <label class="input-control radio margin5" data-role="input-control">
         <input type="radio" name="grade" value="1" <% if(user.grade==1){%>checked<%}%>/>
           <span class="check"></span>
             B4
       </label>
       <label class="input-control radio margin5" data-role="input-control">
         <input type="radio" name="grade" value="2" <% if(user.grade==2){%>checked<%}%>/>
           <span class="check"></span>
             M1
       </label>
       <label class="input-control radio margin5" data-role="input-control">
          <input type="radio" name="grade" value="3" <% if(user.grade==3){%>checked<%}%>/>
           <span class="check"></span>
             M2
       </label>
       <label class="input-control radio margin5" data-role="input-control">
         <input type="radio" name="grade" value="4" <% if(user.grade==4){%>checked<%}%>/>
           <span class="check"></span>
             その他
       </label>
     <label>ツケの上限</label><div class="input-control text"><input name="limit" type="text" value=<%= user.limit %> class="size6 validate[required,custom[integer],min[0]]">円</div>

			<p><%= user.name %>さんの現在の残高 : <%= user.balance %>円</p>
			<div class="input-control text" data-role="input-control">
				<input type="number" class="size4 validate[optional,custom[integer],min[1]]" name="money" min="0"/>
					円 
			</div>
			<div class="input-control select">
    				<select name="inOut" class="size4">
							<option value="1">入金</option>
							<option value="2">出金</option>
						</select>する
			</div>
      <div class="input-control text" data-role="input-control">
        <input type="text" class="size4" placeholder="備考" />
      </div>

      <div class="input-control checkbox" data-role="input-control">
      <label>BAN</label>
        <label class="inline-block">
          <input type="checkbox" name="ban" value="1" <% if(user.permission==10 || user.permission==11){ %>checked<%}%>/>
          <span class="check"></span>
            このアカウントを凍結する
        </label>
			</div>
      <br>
      </fieldset>
      <p>
      <a href="/user/<%= user.user_id%>/password"><button type="button" class="button large default">パスワードの変更</button></a>
      </p>
			<input type="submit" value="確認" class = "button large info">
      <a href="/user/<%= user.user_id %>"><button class="button large" type="button">キャンセル</button></a>
      </form>
			
		</div>
    <script>
  $(document).ready(function(){
    $("#edit").validationEngine();
  });
  var isConfirmDisplayed=false;
  var confirm=function(){
    if(!$("#edit").validationEngine('validate'))return false;
    var n_grade=$('#edit input[name="grade"]:checked').val();

    switch (n_grade){
      case "1": n_grade="B4"; break;
      case "2": n_grade="M1"; break;
      case "3": n_grade="M2"; break;
      case "4": n_grade="その他"; break;
    }
    var n_permission=$('#edit select[name="permission"]').val();
    switch (n_permission){
      case "0": n_permission="購入者"; break;
      case "1": n_permission="管理者"; break;
    }
    var n_inOut=$('#edit select[name="inOut"]').val();
    switch (n_inOut){
      case "1": n_inOut=" 円入金する"; break;
      case "2": n_inOut=" 円出金する"; break;
    }
    var n_ban=$('#edit input[name="ban"]:checked').val();
    if(<%= user.permission %>==0 || <%= user.permission %>==1){
      if(n_ban==1){
        n_ban="<span class='fg-red'>このアカウントを凍結する</span>";
      } else {
        n_ban='';
      }
    } else {
      if(n_ban==1){
        n_ban='';
      } else {
        n_ban="このアカウントの凍結を解除する";
      }
    }

    var name="<dt>名前</dt><dd>"+$('#edit input[name="name"]').val()+"</dd>";
    var user_id="<dt>ユーザーID</dt><dd>"+$('#edit input[name="user_id"]').val()+"</dd>";
    var grade="<dt>学年</dt><dd>"+n_grade+"</dd>";
    var limit="<dt>ツケの上限</dt><dd>"+$('#edit input[name="limit"]').val()+"円"+"</dd>";
    var money="<dt>入出金</dt><dd>"+$('#edit input[name="money"]').val()+n_inOut+"</dd>";
    var ban="<dt>BAN</dt><dd>"+n_ban+"</dd>";

    if($('#edit input[name="money"]').val()==''){
      money='';
    }
    if(n_ban==''){
      ban='';
    }

    if(!isConfirmDisplayed){
      $.Dialog({
          shadow: true,
          overlay: false,
          icon: '<span class="icon-rocket"></span>',
          title: '変更確認',
          width: 500,
          padding: 10,
          content: '<p>以下の内容で変更します。よろしいですか?</p><dl>'+name+user_id+grade+limit+money+ban+'</dl><button class="large info" onclick="$(\'#edit\').submit();">OK</button><button class="large" onclick="$.Dialog.close()">キャンセル</button>',
          onShow:function(){isConfirmDisplayed=true;},
      });
      $.Dialog.close=(function(){
        var context=$.Dialog;
        var origin=$.Dialog.close;
        return (function(){isConfirmDisplayed=false;origin.call(context);});
      })();
      return false;
    }
  }
</script>
