<div class="container">
  <h1>Edit Password</h1>
  <form action="/user/<%= user.user_id%>/password" method="post" id="password">
    <fieldset>
      <label>新しいパスワード</label><div class="input-control text"><input name="password" type="password" id="password1" class="size6 validate[required,maxSize[20]]"></div>
      <label>新しいパスワードの再入力</label><div class="input-control text"><input name="password_confirm" type="password" class="size6 validate[required,equals[password1]]"></div>
    </fieldset>
    <input type="submit" value="確認" class = "button large info">
    <%if(session.permission == 1){%><a href="/user/<%= user.user_id %>/edit"><button class="button large" type="button">キャンセル</button></a>
    <%}else{%><a href="/user/mypage/edit"><button class="button large" type="button">キャンセル</button></a><%}%>
  </form>
</div>

<script>
  $(document).ready(function(){
    $("#password").validationEngine();
  });
</script>